{
    "compilerOptions": {
      "lib": ["esnext"],
      "allowJs": true,
      // "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "target": "es5",
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}