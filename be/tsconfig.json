{
    "compilerOptions": {
      "lib": ["esnext"],
      "allowJs": true,
      "noEmit": true,
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "module": "esnext",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}